<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:scrollbars="vertical"
            android:id="@+id/input"
            android:minLines="2"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="60sp"
            android:text="6*2"
            android:background="#00000000"
            android:gravity="bottom|right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:scrollbars="vertical"
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:minLines="1"
            android:text="=8"
            android:textSize="50sp"
            android:gravity="bottom|right"
            android:maxLines="2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        >


        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/clear"
                android:textColor="#ff7335"
                android:text="AC"
                android:textSize="15sp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/delete"
                android:textColor="#ff7335"
                android:text="del"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/percent"
                android:textColor="#ff7335"
                android:text="%"
                android:textSize="18sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/div"
                android:textColor="#ff7335"
                android:text="÷"
                android:textSize="25sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/seven"
                android:textColor="#000000"
                android:text="7"
                android:textSize="20sp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/eight"
                android:textColor="#000000"
                android:text="8"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/nine"
                android:textColor="#000000"
                android:text="9"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/multiply"
                android:textColor="#ff7335"
                android:text="×"
                android:textSize="25sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/four"
                android:textColor="#000000"
                android:text="4"
                android:textSize="20sp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/five"
                android:textColor="#000000"
                android:text="5"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/six"
                android:textColor="#000000"
                android:text="6"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button
                android:id="@+id/sub"
                android:textColor="#ff7335"
                android:text="-"
                android:textSize="25sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/one"
                android:textColor="#000000"
                android:text="1"
                android:textSize="20sp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/two"
                android:textColor="#000000"
                android:text="2"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/three"
                android:textColor="#000000"
                android:text="3"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/add"
                android:textColor="#ff7335"
                android:text="+"
                android:textSize="25sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/sqrt"
                android:textColor="#ff7335"
                android:text="√"
                android:textSize="15sp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/zero"
                android:textColor="#000000"
                android:text="0"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/point"
                android:textColor="#000000"
                android:text="."
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/equal"
                android:textColor="#ffffff"
                app:backgroundTint="#ff7335"
                android:text="="
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>





    </LinearLayout>




</LinearLayout>